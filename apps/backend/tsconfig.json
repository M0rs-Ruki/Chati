{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@chati/database": [
        "../../packages/database/src/index.ts"
      ]
    },
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "../../packages/database/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}